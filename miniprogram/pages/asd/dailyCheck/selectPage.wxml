      <view class="eq-select asd-item-cell" wx:if="{{selecttype==1}}">
        <view class="asd-picker-title">设备</view>
        <picker class="asd-picker" disabled="{{(!locationok)||(machines.length<1)}}" range="{{machines}}" range-key="DESCRIPTION"
          value="{{index}}" bindchange="eqChange">
          <view class="picker">当前选择: {{machines[machineidx].MACHINENAME}}</view>
        </picker>
      </view>
      <view class="unit-select asd-item-cell" wx:if="{{selecttype==1}}">
        <view class="asd-picker-title">单元</view>
        <picker class="asd-picker" range="{{machines[machineidx].UNIT}}" range-key="DESCRIPTION" value="{{index}}"
          bindchange="unitChange">
          <view class="picker">当前选择: {{machines[machineidx].UNIT[unitidx].MACHINENAME}}</view>
        </picker>
      </view>
    </view>
    <view class="asd-item-cell">
      <view class="asd-picker-title">楼层</view>
      <picker class="asd-picker" disabled="{{!locationok}}" range="{{level}}" range-key="DESCRIPTION" value="{{index}}"
        bindchange="levelChange">
        <view class="picker">当前选择: {{level[levelidx].DESCRIPTION}}</view>
      </picker>

    </view>
  </view>

  <view class="asd-btn-cell">
    <button class="task-go-btn" disabled="{{boxdata[0].row.length<1}}" type="primary" bindtap="goClick">G O</button>
  </view>
