/* miniprogram/pages/asd/library/storageIn.wxss */
@import "../../../style/asd.wxss";
.libraryslot-title
{
  text-align: left;
  
  border-bottom-width: 1px;
  margin-top: 5px;
  margin-bottom: 5px;
  padding-left: 10px;
  font-size: 25;
  font-weight: 600;
}
.ppbox-list-title
{
  padding-left: 3px;
  margin-top: 5px;
  font-size:13px;
  font-weight: 600;
}
.ppbox-cells
{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
 
  flex-grow: 1;
  
}
.ppbox-cell
{
  display: flex;
  flex-direction: row;
  justify-content: left;
  justify-items: left;
  height: 100%;
  width: 100%;
  flex-grow: 1;
}

.ppbox-ipt-cell
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content:center;
  align-items: center;
  width: 100%;
  margin-bottom: 5px;
  padding-left: 3px;
  padding-right: 3px;
  padding-bottom: 3px;
  border-bottom-style: dotted;
  border-bottom-width:1px;
}
.ppbox-ipttext
{
  display: flex;
  width:6;
  font-size: 15px;
 
  flex-grow: 1;
  margin-left: 3px;
}
.ppbox-add-btn
{
  display: flex;
  flex-grow: 0;
  margin-right: 10px;
  align-self:center;

}

.ppbox-header
{
  padding-left: 3px;
  display: flex;
  flex-direction: row;
  justify-content: left;
  justify-items: left;
  width: 960px;
}
.ppbox-header-item
{
  background-color: rgb(20, 126, 161);
  color:white;
  font-size:11px;
  border-right-style: dotted;
  border-right-width: 1px;
  text-align: center;
}

.ppbox-item-default
{
  
  font-size: 10px;
  /*
  border-right-style: dotted;
  border-width: 1px;
  border-bottom-style: dotted;
  */
  margin-right: 2px;
  text-align: center;
}

.ppbox-scroll
{
  display: inline-block;
  width: 100%;
}
.libraryarea-cell
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}
.libary-scan-icon
{
  width: 20;
  height: 20;
  display: flex;
  flex-grow: 0;
  margin-right: 15px;
}
.ppbox-btn-cell
{
  
}
.ppbox-submit-btn
{
  margin:10px;
  
  text-align: center;
}
.ppboxinfo-table
{
  margin-left: 2px;
}
.grow-col
{
  flex-grow: 0.5;
}
.hold-backcolor
{
  color: red;
}
.scanbox-list-title
{
  font-size: 13px;
  background-color: lightcoral;
  color: white;
}
.box-item
{
  margin-left: 5px;
  color:blue;
  font-size: 12px;
}
