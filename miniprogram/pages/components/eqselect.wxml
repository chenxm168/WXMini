    <view class="asd-condition-select-celss">
      <view class="asd-item-cell">

        <view class="asd-checkbox-view">
          <switch  type="checkbox" class="asd-radio" bindchange="manualChange" />手动选择设备</view>
      </view>


      <view class="eqgroup-select asd-item-cell" wx:if="{{unitname==null}}">
        <view class="asd-picker-title">设备组</view>
        <picker class="asd-picker" disabled="{{(machinegroup.length<1)}}" range="{{machinegroup}}" range-key="DESCRIPTION"
          value="{{index}}" bindchange="eqgroupChange">
          <view class="picker">当前选择: {{machinegroup[machinegroupidx].MACHINEGROUPNAME}}</view>
        </picker>
      </view>

      <view class="eq-select asd-item-cell" wx:if="{{machineselectshow}}">
        <view class="asd-picker-title">设备</view>
        <picker class="asd-picker" disabled="{{machines.length<1}}" range="{{machines}}" range-key="DESCRIPTION"
          value="{{index}}" bindchange="eqChange">
          <view class="picker">当前选择: {{machines[machineidx].MACHINENAME}}</view>
        </picker>
      </view>
      <view class="unit-select asd-item-cell" wx:if="{{equnitselectshow}}">
        <view class="asd-picker-title">单元</view>
        <picker class="asd-picker" range="{{machines[machineidx].UNIT}}" range-key="DESCRIPTION" value="{{index}}"
          bindchange="unitChange">
          <view class="picker">当前选择: {{machines[machineidx].UNIT[unitidx].MACHINENAME}}</view>
        </picker>
      </view>
    </view>
    <view class="asd-item-cell" wx:if="{{eqlevelselectshow}}">
      <view class="asd-picker-title">楼层</view>
      <picker class="asd-picker"  range="{{level}}" range-key="DESCRIPTION" value="{{index}}"
        bindchange="levelChange">
        <view class="picker">当前选择: {{level[levelidx].DESCRIPTION}}</view>
      </picker>

    </view>
  </view>

  <view >
    <button class="gobtn"  disabled="{{boxdata[0].row.length<1}}" type="primary" bindtap="goClick">G O</button>
  </view>
</view>