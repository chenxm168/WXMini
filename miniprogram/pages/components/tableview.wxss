.table-container
{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
 
  flex-grow: 1;
  
}
.table-title-container
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 2px;
}
.table-title-oth-container
{
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  justify-content: space-around;
}

