    <view class="asd-item-cell">
        <view class="asd-ridio-cell-flex-row">
          <radio-group bindchange="selectTypeChange">
            <label class="asd-radio-label">
              <radio class="asd-radio" checked="true" value="1"></radio>按设备子单元筛选
            </label>
            <label class="asd-radio-label">
              <radio class="asd-radio" value="2"></radio>按设备及楼层筛选
            </label>
          </radio-group>
        </view>
      </view>
