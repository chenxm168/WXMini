{

}




.table
{
  display: table;
  flex-flow: 1;
}
.table-row
{
  display: table-row;
  margin-bottom: 2px;
  

}

.table-cell
{
  display: table-cell;
  
  text-align: center;
  border-left-style: dotted;
  border-color: white;
  border-width: 1px;
}
.table-header
{
  background-color: #147ea1;
  color:#ffffff;
  font-size: 13px;
  font-weight: 600;
}
.table-content
{
  font-size:11px;
  
}

