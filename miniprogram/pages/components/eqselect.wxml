<view class="container" style="min-height:{{wHeight-5}}px">
  <view class="page-header"></view>
  <view class="page-body ">
    <view class=" asd-scan-cell" bind:touchstart="scanClick">
      <view class="asd-scan-text">扫一扫设备二维码</view>
      <image class="weui-grid__icon asd-scan-icon" src="../images/scan.png"  />
    </view>
