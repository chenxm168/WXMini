          <switch disabled="{{!locationok}}" type="checkbox" class="asd-radio" bindchange="manualChange" />手动选择设备</view>
      </view>


      <view class="eqgroup-select asd-item-cell" wx:if="{{unitname==null}}">
        <view class="asd-picker-title">设备组</view>
        <picker class="asd-picker" disabled="{{(!locationok)||(machinegroup.length<1)}}" range="{{machinegroup}}" range-key="DESCRIPTION"
          value="{{index}}" bindchange="eqgroupChange">
          <view class="picker">当前选择: {{machinegroup[machinegroupidx].MACHINEGROUPNAME}}</view>
        </picker>
      </view>
